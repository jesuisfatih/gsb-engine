{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "outDir": "../dist-server",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
